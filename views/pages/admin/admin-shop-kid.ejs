      <div style="float: right;">
        <button type="button" id="btnAddShop" class="btn btn-primary" data-toggle="modal" data-target="#addProductKid">
          Add
        </button>
      </div>
      <!-- Modal -->
      <form action="http://localhost:3001/admin/page/admin-shop-kid" method="POST" enctype="multipart/form-data">
      <div class="modal fade" id="addProductKid" tabindex="-1" role="dialog" 
        aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLongTitle">Add Product</h5>
              
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              
              <input type="text" name="txtName" id="name" placeholder="Please enter name"/>
              <input type="text" name="txtCategory" id="category" placeholder="Please enter category"/>
              <input type="file" name="fileImage" id="image" />
              <input type="text" name="txtMaker" id="maker" placeholder="Please enter Brand"/>
              <input type="text" name="txtPrice" id="price" placeholder="Please enter price"/>
              <input type="text" name="txtDiscount" id="discout" placeholder="Please enter discount"/>
              
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
              <button id="btnSaveProduct" type="submit" class="btn btn-primary">Save</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</form>
  <div class="widget-content nopadding">
