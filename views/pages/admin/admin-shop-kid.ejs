          <td><%- pro.category %> </td>
          <td class="center"><img src="upload/1582698413791-IMG_1971.JPG" alt="anh"></td>
          <td class="center"><%- pro.brand %> </td>
          <td class="center"><%- pro.price %> $
          </td>
          <td class="center"> <%- pro.discount %>
          <td>
            <button class="btn btn-info" id="editProductKid" data-toggle="modal" data-target="#editProductKid"> <i class="icon-edit">&nbsp; </i>Edit</<i>&nbsp; </button>
            <button class="btn btn-danger">Delete</button>
          </td>
        </tr>
      <% }) %> 
