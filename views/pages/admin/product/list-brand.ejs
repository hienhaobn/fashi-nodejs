<link href="font-awesome/css/font-awesome.css" rel="stylesheet" />
<link rel="stylesheet" href="css/jquery.gritter.css" />
<link href='http://fonts.googleapis.com/css?family=Open+Sans:400,700,800' rel='stylesheet' type='text/css'>
</head>
<body>

<!--Header-part-->
<div id="header">
  <h1><a href="dashboard.html">Fashi Admin</a></h1>
</div>
<!--close-Header-part--> 


<!--top-Header-menu-->
<div id="user-nav" class="navbar navbar-inverse">
    <ul class="nav">
      <li  class="dropdown" id="profile-messages" ><a title="" href="#" data-toggle="dropdown" data-target="#profile-messages" class="dropdown-toggle"><i class="icon icon-user"></i>  <span class="text">Welcome User</span><b class="caret"></b></a>
        <ul class="dropdown-menu">
          <li><a href="/admin/page/detail-user"><i class="icon-user"></i> Thông tin cá nhân</a></li>
          <li class="divider"></li>
          <li><a href="/login"><i class="icon-key"></i> Đăng xuất</a></li>
        </ul>
      </li>
    </ul>
  </div>
<!--close-top-Header-menu-->
<!--start-top-serch-->
<div id="search">
  <input type="text" placeholder="Tìm kiếm..."/>
  <button type="submit" class="tip-bottom" title="Search"><i class="icon-search icon-white"></i></button>
</div>
<!--close-top-serch-->
<!--sidebar-menu-->
<div id="sidebar"><a href="#" class="visible-phone"><i class="icon icon-home"></i> Trang chủ admin</a>
    <ul>
      <li><a href="/admin/page/admin-user/"><i class="icon icon-user"></i> <span>Quản lý tài khoản</span></a> </li>
      <li class="submenu"> <a href="#"><i class="icon icon-book"></i> <span>Quản lý blog</span></a>
        <ul>
          <li><a href="/admin/page/list-blog">Danh sách blog</a></li>
          <li><a href="/admin/page/category-blog">Danh sách thể loại</a></li>
        </ul>
      </li>
      <li class="submenu active"> <a href="#"><i class="icon icon-truck"></i> <span>Quản lý hàng</span></a>
        <ul>
          <li><a href="/admin/page/list-product"> Danh sách hàng</a></li>
          <li><a href="/admin/page/list-brand">Danh sách nhà cung cấp</a></li>
          <li><a href="/admin/page/list-category-product">Danh sách thể loại</a></li>
        </ul>
      </a>
      <li class="submenu"> <a href="#"><i class="icon icon-list-alt"></i> <span>Quản lý đơn hàng</span></a>
        <ul>
          <li><a href="/admin/page/list-order"> Danh sách đơn hàng</a></li>
        </ul>
      </li>
      <li class="submenu"> <a href="#"><i class="icon icon-trophy"></i> <span>Thống kê</span></a>
        <ul>
          <li><a href="/admin/page/statistic-product"> Thống kê hàng</a></li>
          <li><a href="/admin/page/statistic-order"> Thống kê đơn hàng</a></li>
          <li><a href="/admin/page/revenue-statistics-product"> Thống kê doanh thu</a></li>
          <li><a href="/admin/page/statistic-account"> Thống kê tài khoản</a></li>
        </ul>
      </li>
     
    </ul>
  </div>

  <div id="content">

    <div id="content-header">
        <div id="breadcrumb"> <a href="/admin" title="Go to Home" class="tip-bottom"><i class="icon-home"></i> Trang
                chủ</a></div>
    </div>
    <h3>Quản lý nhà cung cấp hàng</h3>
    <button href="#popup-create-product-brand" data-toggle="modal" style="float: right;" class="btn btn-success btnCreateCategoryBrand">Thêm</button>
    <div class="card">
        <div class="card-body">
            <h5 class="card-title m-b-0">Danh sách nhà cung cấp</h5>
        </div>
        <table class="table" id="data-table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Tên nhà cung cấp</th>
                    <th scope="col">Trạng thái</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
              <% brands.forEach( (brand, index) => { %>
                <tr class="<%- brand._id %> ">
                  <th scope="row"><%- index+1 %></th>
                  <td style="text-align: center; width: 700px;"><%- brand.name %> </td>

                   <% if(brand.status == true) { %>
                <td style="text-align: center;"><i class="badge badge-success">Hoạt động</i></td>
                <% } else { %>
                  <td style="text-align: center;"><i class="badge badge-important">Không hoạt động</i></td>
                <% } %> 
                  <td style="text-align: center;">
                    <button href="#popup-edit-product-brand" data-toggle="modal" data-id="<%- brand._id %> " class="btn btn-info btnEditProductBrand">Sửa</button>
                    <button href="#popup-delete-product-brand" data-toggle="modal" data-id="<%- brand._id %> " class="btn btn-danger btnDeleteProductBrand">Xóa</button>
                  </td>
              </tr>
              <% } ) %> 
                
            </tbody>
        </table>
    </div>
</div>


<div class="row-fluid">
  <div id="footer" class="span12"> 2020 &copy; Fashi Admin. </div>
</div>
<div id="popup-create-product-brand" class="modal hide">
  <form action="http://localhost:3001/admin/page/add-brand" method="POST">
 <div class="modal-header">
   <button data-dismiss="modal" class="close" type="button">×</button>
   <h3>Thêm thông tin nhà cung cấp sản phẩm</h3>
 </div>
 <div class="modal-body">
     <label for="title"><strong>Tên nhà cung cấp</strong></label> 
     <input type="text" name="txtName" id="name" placeholder="Nhập tên nhà cung cấp sản phẩm"><br/>
 </div>
 <div class="modal-footer"> 
  <button class="btn btn-primary" type="submit">Lưu</button>
   <button data-dismiss="modal" class="btn" type="submit">Hủy</button> </div>
</form>
</div>
<div id="popup-edit-product-brand" class="modal hide">
   <form action="" method="POST" id="modal-update">
  <div class="modal-header">
    <button data-dismiss="modal" class="close" type="button">×</button>
    <h3>Sửa thông tin nhà cung cấp sản phẩm</h3>
  </div>
  <div class="modal-body">
      <label for="title"><strong>Tên nhà cung cấp</strong></label> 
      <input type="text" name="nameCategory" id="nameCategory" placeholder="Nhập nhà cung cấp sản phẩm"><br/>
     
      <label for="title"><strong>Trạng thái</strong></label>
      <select name="category" id="category">
          <option value="0">Hoạt động</option>
          <option value="1">Không hoạt động</option>
        
      </select>
  </div>
  <div class="modal-footer"> 
      <button class="btn btn-primary" type="submit">Lưu</button>
       <button data-dismiss="modal" class="btn" type="submit">Hủy</button> 
  </div>
</form>
</div>
<script src="https://unpkg.com/sweetalert2@7.8.2/dist/sweetalert2.all.js"></script>
<script src="js/excanvas.min.js"></script> 
<script src="jquery-3.4.1.min.js"></script>
<script src="js/jquery.ui.custom.js"></script> 
<script src="js/bootstrap.min.js"></script> 
<script src="js/jquery.validate.js"></script> 
<script src="js/jquery.wizard.js"></script> 
<script src="js/select2.min.js"></script> 
<script src="js/matrix.popover.js"></script> 
<script src="js/jquery.dataTables.min.js"></script> 
<script src="event-product.js"></script>
</body>
</html>
